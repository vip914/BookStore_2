@{
    ViewBag.Title = "Home Page";
}

<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr>
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
        </tr>
        @foreach (var item in ViewBag.Books)
        {
            <tr>
                <td><p>@item.Name</p></td>
                <td><p>@item.Author</p></td>
                <td><p>@item.Price</p></td>
                <td><p><a href="Home/Buy/@item.Id">Купить</a></p></td>

            </tr>
        }
    </table>
</div>

